@model Erk.Models.IlceViewModel
@{
    ViewData["Title"] = "IlceEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>İlçe Ekleme</h1>
<form asp-action="IlceEkle" asp-controller="Ilce" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Ilce.IlceAdi"></label>
        <input class="form-control" asp-for="Ilce.IlceAdi" />
    </div>
    <div class="mb-3">
        <label class="form-label">İl Adı</label>
        <select class="form-control" asp-for="Ilce.Il.IlAdi" asp-items="@(new SelectList(Model.Iller, "IlId", "IlAd"))">
            <option value="">Sınıf Seçiniz</option>
        </select>
    </div>
    <input type="submit" value="Kaydet" class="btn btn-outline-success" />
</form>



