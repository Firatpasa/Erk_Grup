@model Erk.DTO.Entities.Marka

@{
    ViewData["Title"] = "Marka Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-action="MarkaEkle" asp-controller="Marka" method="post" enctype="multipart/form-data">
    <!-- Card Görünümü ve Shadow Efekti -->
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title">Marka Ekleme</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Marka Adı Alanı -->
                <div class="col-12 mb-3 col-md-8 offset-md-2">
                    <div class="form-group">
                        <label for="MarkaAd">Marka Adı</label>
                        <input type="text" class="form-control" id="MarkaAd" name="MarkaAd" value="@Model.MarkaAd" required />
                    </div>
                </div>

                <!-- Marka Durumu Alanı (Radio Button) -->
                <div class="col-12 mb-3 col-md-8 offset-md-2">
                    <div class="form-group">
                        <label for="MarkaDurumu">Marka Durumu</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" id="Aktif" name="MarkaDurumu" value="true" @(Model.MarkaDurumu ? "checked" : "") />
                            <label class="form-check-label" for="Aktif">Aktif</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" id="Pasif" name="MarkaDurumu" value="false" @(!Model.MarkaDurumu ? "checked" : "") />
                            <label class="form-check-label" for="Pasif">Pasif</label>
                        </div>
                    </div>
                </div>

                <!-- Marka Resmi Alanı -->
                <div class="col-12 mb-3 col-md-8 offset-md-2">
                    <div class="form-group">
                        <label for="MarkaResim">Marka Resmi</label>
                        <input type="file" class="form-control" id="MarkaResim" name="MarkaResim" />
                    </div>
                </div>

                <!-- Kaydet Butonu -->
                <div class="col-12 mb-3 col-md-8 offset-md-2">
                    <button type="submit" class="btn btn-success w-100">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Marka Durumu radio buttonları için doğru seçeneği işaretle
            var markaDurumu = '@Model.MarkaDurumu'.toLowerCase();  // C# değerini JavaScript'e aktar
            if (markaDurumu === "true") {
                $('#Aktif').prop('checked', true);
            } else {
                $('#Pasif').prop('checked', true);
            }
        });
    </script>
}
