@model Erk.Models.GirisViewModel
@{
    ViewData["Title"] = "Giris";
    Layout = "~/Views/Shared/_LayoutGiris.cshtml";
}

<form method="post" asp-action="Giris" asp-controller="Giris">
    <div class="row g-0">
        <!-- Sol Bölüm (Görsel Alan) -->
        <div class="col-12 col-xl-7 col-xxl-8 auth-cover-left align-items-center justify-content-center d-none d-xl-flex border-end">
            <div class="card rounded-0 mb-0 border-0 shadow-none bg-transparent">
                <div class="card-body">
                    <img src="~/Admin/assets/images/auth/login1.png" class="img-fluid auth-img-cover-login" width="650" alt="Giriş Görseli">
                </div>
            </div>
        </div>

        <!-- Sağ Bölüm (Giriş Formu) -->
        <div class="col-12 col-xl-5 col-xxl-4 auth-cover-right align-items-center justify-content-center">
            <div class="card rounded-0 m-3 mb-0 border-0 shadow-none">
                <div class="card-body p-sm-5">
                    <!-- Logo -->
                    <img src="~/Admin/assets/images/logo1.png" class="mb-4" width="145" alt="Logo">

                    <!-- Başlık -->
                    <h4 class="fw-bold">Giriş Yapınız</h4>
                    <p class="mb-0">Giriş Yapabilmek İçin Aşağıdaki Bilgileri Doldurunuz</p>

                    <!-- Hata Mesajları -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            Lütfen tüm alanları doğru şekilde doldurunuz.
                        </div>
                    }

                    <!-- Form -->
                    <div class="form-body mt-4">
                        <!-- Kullanıcı Adı -->
                        <div class="col-12">
                            <label for="inputKullaniciAd" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="@Model.KullaniciAdi" class="form-control mt-2" id="inputKullaniciAd" placeholder="Kullanıcı Adını Giriniz">
                            <span asp-validation-for="@Model.KullaniciAdi" class="text-danger"></span>
                        </div>

                        <!-- Şifre -->
                        <div class="col-12 mt-2">
                            <label for="inputChoosePassword" class="form-label">Şifre</label>
                            <div class="input-group" id="show_hide_password">
                                <input asp-for="@Model.Sifre" class="form-control mt-2" id="inputChoosePassword" placeholder="Şifre Giriniz" type="password">
                                <a href="javascript:;" class="input-group-text bg-transparent mt-2" onclick="togglePasswordVisibility()">
                                    <i class="bi bi-eye-slash-fill" id="toggleIcon"></i>
                                </a>
                            </div>
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>

                        <!-- Beni Hatırla -->
                        <div class="col-md-6">
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                <label class="form-check-label" for="flexSwitchCheckChecked">Beni Hatırla</label>
                            </div>
                        </div>

                        <!-- Giriş Yap Butonu -->
                        <div class="col-12">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary mt-2">Giriş Yap</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Şifre Görünürlüğü Script -->
<script>
    function togglePasswordVisibility() {
        const passwordField = document.getElementById('inputChoosePassword');
        const toggleIcon = document.getElementById('toggleIcon');

        const isPassword = passwordField.type === "password";
        passwordField.type = isPassword ? "text" : "password";
        toggleIcon.className = isPassword ? 'bi bi-eye-fill' : 'bi bi-eye-slash-fill';
    }
</script>


